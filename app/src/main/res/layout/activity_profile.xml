<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Background Image -->
        <ImageView
            android:id="@+id/background_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/test_background" />

        <!-- User Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="start"
            android:background="#EEEEEE">

            <!-- Profile Picture -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/default_avatar"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp"
                android:background="@drawable/circle_background"
                android:clipToOutline="true" />

            <!-- User Info and Buttons -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <!-- Name -->
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gwynplaine"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <!-- Email -->
                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="test@test.com"
                    android:textSize="14sp"
                    android:textColor="#808080"
                    android:layout_marginBottom="8dp" />

                <!-- Bio -->
                <TextView
                    android:id="@+id/user_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CS student, JPN/CHN/ENG OK, アニメが好き"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <!-- Following and Followers -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/following_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2K Following"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/followers_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="36 Followers"
                        android:textSize="14sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <!-- Button Section -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Edit Profile Button -->
                <Button
                    android:id="@+id/edit_profile_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:backgroundTint="#000000"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

                <!-- Follow Button -->
                <Button
                    android:id="@+id/follow_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Follow"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:backgroundTint="#3b5998"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/unfollow_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unfollow"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:backgroundTint="#FF4500"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

        <!-- User Posts -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tweets_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


        <!-- Placeholder for dynamic posts -->
            <TextView
                android:id="@+id/posts_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Posts aren’t loading right now"
                android:textSize="14sp"
                android:textColor="#808080"
                android:gravity="center"
                android:layout_marginTop="16dp" />
        </LinearLayout>

    </ScrollView>

